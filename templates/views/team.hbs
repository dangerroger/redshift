
<div class="container">
<h1> Our team</h1>
</div>
</div>
<div class="container">
	<!-- if teams -->
	{{#if teams}}
		{{#each teams}}
		<h2>{{name.first}} {{name.last}}</h2>
		<p> {{email}} </p>
		<p>{{about}}</p>

		<div class="team-images">

			{{#if image}}<img src="{{{cloudinaryUrl image width=400 height=250 crop='fit' }}}" class="img-responsive">{{/if}}

				{{#if team.images}}
				<div class="col-sm-4 col-md-4 team-image">
					<img src="{{cloudinaryUrl image width='680' height='680'}}" class="img-rounded">
				</div>
				{{/if}}
				<div class="col-sm-8 col-md-8">
					<div class="row">
						{{#each images}}
						<div class="col-xs-4 col-sm-4 col-md-3 gallery-image">
							<img src="{{cloudinaryUrl image width='300' height='300'}}" class="img-rounded">
						</div>
						{{/each}}
					</div>
				</div>
		</div>
		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no teams yet.</h3>
	{{/if}}
</div>
